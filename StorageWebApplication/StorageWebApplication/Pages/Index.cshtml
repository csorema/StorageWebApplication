@page
@model StorageWebApplication.Pages.IndexModel
@{
    ViewData["Title"] = "Kezdőoldal";
}

<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>
    <div class="index-container">
        <h1>Üdvözöl a StorageWebApplication!</h1>
        <p>Jelentkezz be, vagy hozz létre új fiókot!</p>

        <!-- Csak a két gomb jelenik meg -->
        <div class="buttons">
            <a href="/Login" class="btn btn-primary">Bejelentkezés</a>
            <a href="/Register" class="btn btn-secondary">Regisztráció</a>
            <a href="/StorageController" class="btn btn-secondary">Raktárak kezelése</a>
        </div>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <p>@Model.Message</p>
        }
    </div>
</body>
</html>
